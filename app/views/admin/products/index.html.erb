<div class="row">
  <div class="col text-left">
    <%= link_to '&larr; Home'.html_safe, root_path, class: 'btn btn default' %>
  </div>
  <div class="col text-right">
    <%= link_to new_admin_product_path, class: 'btn btn-success' do %>
      <i class="fas fa-plus-square"></i>
    <% end %>
  </div>
</div>
  <center>
    <h2>Products List</h2>
  </center>
<div class="table-responsive">
  <table class="table table-dark table-striped table-bordered">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">SKU</th>
        <th scope="col">Price</th>
        <th scope="col">Quantity</th>
        <th scope="col">Created By</th>
        <th scope="col">Availability</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.sku %></td>
          <td>$ <%= product.price %></td>
          <td><%= product.quantity %></td>
          <td><%= product.user.full_name %></td>
          <th scope="col">
            <%= link_to (product.availability ? 'Make It Not Available' : 'Make It Available'), change_availability_admin_product_path(product.id), method: :put, class: 'btn btn-secondary' %>
          </th>
          <td>
            <%= link_to  edit_admin_product_path(product.id), class: 'btn btn-info' do %>
              <i class="fas fa-edit"></i>
            <% end %>
            <%= link_to admin_product_path(product.id), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' do %>
              <i class="fas fa-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>