<div class="row">
  <div class="col text-left">
    <%= link_to '&larr; Home'.html_safe, root_path, class: 'btn btn default' %>
  </div>
  <div class="col text-right">
    <%= link_to new_admin_role_path, class: 'btn btn-success' do %>
      <i class="fas fa-plus-square"></i>
    <% end %>
  </div>
</div>
  <center>
    <h2>Roles List</h2>
  </center>
<div class="table-responsive">
  <table class="table table-dark table-striped table-bordered">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @roles.each do |role| %>
        <tr>
          <td><%= role.name %></td>
          <td>
            <%= link_to edit_admin_role_path(role.id), class: 'btn btn-info' do %>
              <i class="fas fa-edit"></i>
            <% end %>
            <%= link_to admin_role_path(role.id), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' do %>
              <i class="fas fa-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>