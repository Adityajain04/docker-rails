<div class="row">
  <div class="col text-left">
    <%= link_to '&larr; Home'.html_safe, root_path, class: 'btn btn default' %>
  </div>
  <div class="col text-right">
    <%= link_to 'Add Role', new_admin_role_path, class: 'btn btn-success' %>
  </div>
</div>
  <center>
    <h2>Roles List</h2>
  </center>
<div class="table-responsive">
  <table class="table table-dark table-striped table-bordered">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @roles.each do |role| %>
        <tr>
          <td><%= role.name %></td>
          <td>
            <%= link_to 'Edit', edit_admin_role_path(role.id), class: 'btn btn-info' %>
            <%= link_to 'Delete', admin_role_path(role.id), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger'%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>